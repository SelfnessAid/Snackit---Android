<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:clickable="false"
    android:focusable="false"
    android:padding="5dip" >


    <!-- Title Of Song-->
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#000000"
        android:id="@+id/view"
        android:clickable="false"
        android:focusable="false"
        android:layout_alignTop="@+id/tag"
        android:layout_toLeftOf="@+id/tag"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="heute"
        android:textColor="#bf040404"
        android:typeface="sans"
        android:textSize="26dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:clickable="false"
        android:focusable="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:capitalize="characters" />

    <View
        android:layout_width="150px"
        android:layout_height="1dp"
        android:background="#000000"
        android:id="@+id/view2"
        android:layout_below="@+id/view"
        android:layout_toRightOf="@+id/tag"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:clickable="false"
        android:focusable="false"
        android:layout_marginRight="50dp" />

    <!-- Artist Name -->
    <TextView
        android:id="@+id/essen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20dp"
        android:text="Rezepte Vorhanden"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/view"
        android:layout_alignStart="@+id/view"
        android:layout_alignRight="@+id/view2"
        android:layout_alignEnd="@+id/view2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Keine"
        android:id="@+id/tageszeit"
        android:textColor="#000000"
        android:textStyle="bold"
        android:clickable="false"
        android:focusable="false"
        android:layout_above="@+id/essen"
        android:layout_alignLeft="@+id/essen"
        android:layout_alignStart="@+id/essen"
        android:textSize="14dp" />


</RelativeLayout>


